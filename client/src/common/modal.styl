.modal
  position relative
  top 0
  left 0
  width 100%
  z-index 3
  height 100%
  /* background rgba(0, 0, 0, 0.6) */
  background white
  transition all 0.3s

	.close
		cursor pointer
		position fixed
		top 2em
		right 2em
		display inline-block
		width 50px
		height 50px
		overflow hidden
		background-color transparent
		border none
		border-width 0
	  transition opacity 0.3s

		&:hover
			&:before,
			&:after
				opacity .7

		&:before,
		&:after
			height 8px
			margin-top -4px
			content ''
			position absolute
			width 100%
			top 50%
			left 0
			background #000

		&:before
			transform rotate(45deg)

		&:after
			transform rotate(-45deg)

  &__main
    position fixed
    background white
    width 100%
    height 100%
    top 0
    left 0
    display flex

.modal.display-block
  display block

.modal.display-none
  display none
