.work
	display flex
	height 100%
	width 100%

	.work__media
	.work__info
		box-sizing border-box
		height 100%

	.work__emptySpace
		flex 1

	.work__info
		padding 1em
		flex 1
		font-family Roboto
		position relative

		h1
			margin-top 0
		p
			text-align justify

		.work__mediaSelector
			position absolute
			bottom 1em
			left 1em
			list-style-type none
			padding-left 0

			li
				font-family Roboto
				display inline-block

			.workButton
				font-family Roboto-Thin
				text-transform lowercase
				// margin 0 5px;
				text-align center
				transition all 0.3s
				cursor pointer
				background none
				border none

				&.workButton--active
					color #ff9bf7
				&:hover
					color #ff9bf7

	.work__media
		background-color #eaeaea
		display flex
		flex 2
		align-items center
		min-width 560px

	@media (max-width: 800px)
		flex-direction column
		.work__media
			margin-top 25px
			padding 10px
			flex-grow 100
			.gallery .gallery__img
			.gallery .gallery__img img
			.gallery .gallery__img .gallery__imgWrapper
				height 100% !important

		.work__info
			flex-grow 0
			.work__mediaSelector
				display block
				margin-top 25px
				position relative
				left 0
				li:first-child .workButton
					padding-left 0

	@media (max-width: 560px)
		.work__media
			min-width 100%
