.work
	display flex
	height calc(100% - 50px)
	width 100%

	.work__media
	.work__info
		height 100%

	.work__emptySpace
		flex 1

	.work__info
		padding 1em
		flex 1
		font-family Roboto
		h1
			margin-top 0
		p
			text-align justify

	.work__media
		background-color #eaeaea
		display flex
		flex 2
		align-items center
		min-width 560px
