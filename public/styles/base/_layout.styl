$header__height = 50px;

html
  height 100%

body
  margin 0
  min-height 100%
  height 100%

  header
    box-sizing border-box
    position absolute
    width 100%
    height  $header__height
    padding 10px
    text-align right
    .header__menu
      margin 0
      right 10px
      list-style-type none
      text-align right
      clearfix();
      li
        span(1/4)
        float none
        display table-cell
        padding  0 5px
        text-align center
        vertical-align middle
        a
          transition color 0.3
          text-decoration none
          text-transform lowercase
          color black
          &:hover
            color #FF9BF7
        &.social-feed
          img,a
            height 26px
            width 26px
          img
            vertical-align bottom

  .app__container
    padding-top $header__height
    height calc(100% - 50px)

#footer
  margin-top 30px
  border-top 1px solid gray-lighter
  padding-top 30px
  color gray-light

.gallery-image img
  display block
  max-width 100%
  height auto
