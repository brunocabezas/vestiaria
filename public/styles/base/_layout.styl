@import '../../../node_modules/jeet/jeet';

$header__height = 50px;

header
  position absolute
  width calc(100% - 2*10px)
  height  $header__height
  padding 10px
  text-align right
  .header__menu
    display inline-block
    li.container123
        @include column(1/3);
    list-style-type none
    li
      margin 0 5px
      &:last-child
        margin-right:0
      display inline-block
      a
        transition color 0.3
        text-transform uppercase
        color black
        &:hover
          color yellow

#body
  padding-top : $header__height;

#footer
  margin-top 30px
  border-top 1px solid gray-lighter
  padding-top 30px
  color gray-light

.gallery-image img
  display block
  max-width 100%
  height auto
