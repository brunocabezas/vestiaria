$header__height = 50px;

html
  height 100%

body
  margin 0
  min-height 100%
  height 100%

  header
    box-sizing border-box
    position absolute
    width 100%
    height  $header__height
    padding 10px
    text-align right
    .header__menu
      margin 0
      right 10px
      list-style-type none
      li
        margin 0 5px
        &:last-child
          margin-right:0
        display inline-block
        a
          transition color 0.3
          text-decoration none
          text-transform lowercase
          color black
          &:hover
            color yellow

  .app__container
    padding-top $header__height
    height 100%

#footer
  margin-top 30px
  border-top 1px solid gray-lighter
  padding-top 30px
  color gray-light

.gallery-image img
  display block
  max-width 100%
  height auto
