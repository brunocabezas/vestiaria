.header
    padding 0 20px
    margin-top 30px
    .header__menu
      text-align right
      list-style-type none
      li
        margin 0 5px
        &:last-child
          margin-right:0
        display inline-block
        a
          transition color 0.3
          text-transform uppercase
          color black
          &:hover
            color yellow

#footer
    margin-top 30px
    border-top 1px solid gray-lighter
    padding-top 30px
    color gray-light

.gallery-image img
    display block
    max-width 100%
    height auto
